{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "datasources": ["helm", "crd", "argocd", "kubernetes"]
    }
  ],
  "argocd": {
    "enabled": true,
    "fileMatch": ["argocd/.*\\.yaml$"]
  }
}
